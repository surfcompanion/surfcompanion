{
	"name": "Surf Companion",
	"version": "0.0.1",
	"manifest_version": 2,
	"background": {
		"scripts": ["js/backgrounds/hot-reload.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": ["activeTab"],
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["js/sites/youtube.com.js"]
		},
		{
			"matches": ["*://*.rarbgmirror.org/*"],
			"js": ["js/sites/rarbg.com.js"]
		},
		{
			"matches": ["*://*.whatsapp.com/*"],
			"js": ["js/vendor.js", "js/sites/whatsapp.com.js"]
		}
	]
}
